<h1>Portfolio Items</h1>
<a href="portfolios/new">Create New Item</a>
<%= link_to "Create new Item", new_project_path %>
<% @projects.each do |project| %>
  <p><%= link_to project.title , project_show_path(project)%></p>
  <p><%= project.subtitle%></p>
  <p><%= project.body%></p>
  <%= image_tag(project.thumb_image) unless project.thumb_image.nil? %>
  <%= link_to "Edit Project", edit_project_path(project.id) %>
  <%= link_to "Delete Item", project_path(project), method: :delete , data: {confirm: "Are you sure?"} %>
<% end %>
